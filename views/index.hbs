<div class="login-page-container">

  <div class="login-page-left">
    <img src="/images/keepsake-logo.png" alt="logo" id="login-page-logo">
    <h3>A digital archive solution for your child's artwork.</h3>
  </div>

  <div class="login-page-right valign-wrapper">

    {{!-- LOGIN TABS --}}
    <div class="row login-box card-panel  lighten-2 hoverable">
      <div class=" col s12">
        <ul class="tabs">
          <li class="tab col s3"><a class="active " href="#test1">Sign In</a></li>
          <li class="tab col s3"><a href="#test2">Sign Up</a></li>
        </ul>
      </div>

      <div id="test1" class="col s12">
        {{!-- SIGN IN --}}
        <h1>Sign-In</h1>
        <form action="/login" method="POST">
          <div class="input-field col s12">
            <input id="username" type="text" class="validate" name="username">
            <label for="username">Username</label>
          </div>

          <div class="input-field col s12">
            <input id="password" type="password" class="validate" name="password">
            <label for="password">Password</label>
          </div>

          <div class="input-field col s12 right-align">
            <button class="waves-effect waves-light btn">Submit</button>
          </div>
        </form>
      </div>

      <div id="test2" class="col s12">
        {{!-- SIGN UP --}}
        <h1>Sign-Up</h1>

        <form action="/signup" method="POST">
          <div class="input-field col s12">
            <input id="theEmail" type="email" class="validate" name="theEmail">
            <label for="theEmail">Email</label>
          </div>

          <div class="input-field col s12">
            <input id="theUsername" type="text" class="validate" name="theUsername">
            <label for="theUsername">Username</label>
          </div>

          <div class="input-field col s12">
            <input id="thePassword" type="password" class="validate" name="thePassword">
            <label for="thePassword">Password</label>
          </div>

          <div class="input-field col s12 right-align">
            <button class="waves-effect waves-light btn">Submit</button>
          </div>

        </form>
      </div>
    </div>
  </div> <!-- close second div -->

</div> <!-- close container -->