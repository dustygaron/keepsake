<div>
  <h2>Edit {{theSingleChild.name}}</h2>

  <form id="edit-form">
    <input type="hidden" value="{{theSingleChild._id}}" id="hidden-id">
    <div>
      <label>Name</label>
      <input type="text" id="edit-name" value="{{theSingleChild.name}}">
    </div>
    <div>
      <label>Date of Birth</label>
      <input type="date" id="edit-dob" value="{{theSingleChild.dob}}">
    </div>
    <div>
      <label>Image</label>
      <input type="file" id="edit-image" value="{{theSingleChild.image}}">
    </div>
    <button>Save</button>
  </form>
</div>

<div>
  <form action="/feed/{{theSingleChild._id}}/remove" method="POST">
    <button>Remove Child</button>
  </form>
</div>

