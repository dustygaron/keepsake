<div class="container">
  <div class="row">
    <div class="edit-user-account">

      <form id="edit-user">
        <input type="hidden" value="{{theUser._id}}" id="hidden-user-id">
        <label for="user-name">Username:</label>
        <input type="text" id="user-name" placeholder="Current: {{theUser.username}}">
        {{!-- {{theUser.username}} --}}
        </input>

        <label for="user-password">Password:</label>
        <input type="text" id="user-password" placeholder="Current Password Hidden for Security">
        {{!-- {{theUser.password}} --}}
        </input>

        <label for="user-email">Email:</label>
        <input type="text" id="user-email" placeholder="Current: {{theUser.email}}">
        {{!-- {{theUser.email}} --}}
        </input>

        <div id="user-children">
          <label for="">The Artists:</label>
          {{#each listOfChildren}}
          {{#if this.owned}}
          <img class="circle avatar" src="{{this.image}}">
          {{/if}}
          {{/each}}
        </div>
        <button class="btn-submit right">Submit Changes</button>
      </form>

      <form action="/feed/user-details/{{theUser._id}}/remove" method="POST">
        <button class="btn-delete right">Delete User Account</button>
      </form>
    </div>
  </div> <!-- Close row -->
